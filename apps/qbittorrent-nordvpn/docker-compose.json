{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "qbittorrent-nordvpn",
      "image": "lscr.io/linuxserver/qbittorrent:5.1.0",
      "isMain": true,
      "internalPort": "${APP_PORT}",
      "addPorts": [
        {
          "hostPort": 6881,
          "containerPort": 6881,
          "udp": true
        }
      ],
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "${TZ}",
        "WEBUI_PORT": "${APP_PORT}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/torrents",
          "containerPath": "/media/torrents",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "networkMode": "service:gluetun"
    },
    {
      "name": "gluetun",
      "image": "qmcgaw/gluetun:latest",
      "environment": {
        "PGID": "1000",
        "PUID": "1000",
        "VPN_SERVICE_PROVIDER": "${VPN_SERVICE_PROVIDER}",
        "VPN_TYPE": "${VPN_TYPE}",
        "OPENVPN_USER": "${OPENVPN_USER}",
        "OPENVPN_PASSWORD": "${OPENVPN_PASSWORD}",
        "SERVER_COUNTRIES": "${SERVER_COUNTRIES}"
      },
      "internalPort": 6881,
      "addPorts": [
        {
          "containerPort": 6881,
          "hostPort": 6881,
          "tcp": false,
          "udp": true
        }
      ],
      "capAdd": [
        "NET_ADMIN"
      ]
    }
  ]
}
